<script type="text/javascript">
    function view(id) {
        swal({
            title: "are u sy",
            text: 'View pass',
            icon: 'warning',
            button: 'ture',
            dangerMode: 'true'
        })
    }

    function removeUser(id) {
        console.id(id)
        swal({
            title: "Are you sure?",
            text: "Remove User?",
            icon: "warning",
            button: true,
            dangerMode: true,
        })
            .then((willRemove) => {
                if (willRemove) {
                    $.ajax({
                        url: '/admin/remove-user',
                        method: "POST",
                        data: { id: id },
                        success: (result) => {
                            console.log(result)
                            if (result.status) {
                                swal({
                                    text: "User Removed",
                                    icon: "success",
                                });
                            }
                            location.href = '/admin/userDetails'
                        }
                    });
                }
            })
    }

    function blockUser(id) {
        swal({
            title: "Are you sure?",
            text: "Block User?",
            icon: "warning",
            button: true,
            dangerMode: true,
        })
            .then((willBlock) => {
                if (willBlock) {
                    $.ajax({
                        url: '/admin/block-user',
                        method: "POST",
                        data: { id: id },
                        success: (result) => {
                            console.log(result)
                            if (result.status) {
                                swal({
                                    text: "User Blocked Success",
                                    icon: "success",
                                });
                            }
                            location.href = '/admin/userDetails'
                        }
                    });
                }
            })
    }

    function unblockUser(id) {
        console.log(id)
        swal({
            title: "Are you sure?",
            text: "Unblock",
            button: true,
            dangerMode: true,
        })
            .then((willUnblock) => {
                if (willUnblock) {
                    $.ajax({
                        url: "/admin/unblock-user",
                        method: 'POST',
                        data: { id: id },
                        success: (result) => {
                            console.log(result.status)
                            if (result.status) {
                                swal({
                                    text: "User unblock Success",
                                    icon: "success",
                                });
                            }
                            location.href = '/admin/userDetails'
                        }

                    });
                }
            })
    }

</script>
