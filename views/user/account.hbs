 <script>
        "use strict";

        // vars
        var result = document.querySelector(".result"),
            img_result = document.querySelector(".img-result"),
            img_w = document.querySelector(".img-w"),
            img_h = document.querySelector(".img-h"),
            options = document.querySelector(".options"),
            save = document.querySelector(".save"),
            upload = document.querySelector("#file-input"),
            label = document.getElementById("uploadButton"),
            avatar = document.querySelector('.avatar'),
			dwn = document.querySelector('.download'),
			update = document.querySelector('#submitPro'),
            set = document.querySelector(".set"),
			cropper = "";
        // on change show image with crop options
        upload.addEventListener("change", function(e) {
            if (e.target.files.length) {
                // start file reader
                var reader = new FileReader();
                reader.onload = function(e) {
                    if (e.target.result) {
                        // create new image
                        var img = document.createElement("img");
                        img.id = "image";
                        img.width = 400;
                        img.src = e.target.result;
                  
                        // append new image
                        result.appendChild(img);
                        // show save btn and options
                        save.classList.remove("hide");
                        options.classList.remove("hide");
						dwn.style.display = 'block'
                        // init cropper
                        cropper = new Cropper(img);
                    }
                };
                reader.readAsDataURL(e.target.files[0]);
            }
        });
        // save on click
        save.addEventListener("click", function(e) {

            var cropped = document.querySelector(".cropped");
                  // clean result before
                        result.style.display = "none";
            e.preventDefault();
            // get result to data uri
            var imgSrc = cropper.getCroppedCanvas({
                width: img_w.value // input value
            }).toDataURL();
            // remove hide class of img dwnload upload btn
            cropped.classList.remove("hide");
            img_result.classList.remove("hide");			
			update.classList.remove("hide");
			set.classList.remove("hide");

            // show image cropped
            cropped.src = imgSrc;                   
            dwn.classList.remove("hide");
			dwn.download = "account.jpg";
			dwn.setAttribute("href",imgSrc)
			save.style.visibility =("hidden")
        });
		
        label.addEventListener("click",function(e){
            upload.click()
        })
	    set.addEventListener("click",function(e){
            update.submit()
        })	
		dwn.addEventListener("click",function(){
			//submitPro.click()
			//dwnld.click()
			location.reload()
			
		})
        avatar.addEventListener('mouseenter',function(){
            label.style.display = 'block';
        })
        avatar.addEventListener('mouseleave',function(){
            label.style.display = 'none'
        })
    </script>
	
	
